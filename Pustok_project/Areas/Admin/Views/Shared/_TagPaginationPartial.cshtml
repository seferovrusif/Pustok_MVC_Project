@model PaginationVM<IEnumerable<TagListItemVM>>

<table class="table table-bordered" width="100%" cellspacing="0">

    <tbody>

    <thead>
    <th>Id</th>
    <th>Title</th>
    <th colspan="2">Action</th>
    </thead>
    <div class="row pag-prods">
            @foreach (var item in Model.Items)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
            <td class="text-center"><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
        </tr>
            }

    </div>
    <nav aria-label="Page navigation example">
        <ul id="prod-pag" class="pagination">
            <li class="page-item  @(Model.HasPrev ? "" : "disabled")"><a class='page-link' asp-action="TagLoadMore" asp-route-page="@(Model.CurrentPage - 1)" asp-route-count="4">Previous</a></li>
                @for (int i = 1; i <= Model.LastPage; i++)
                {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" asp-action="TagLoadMore" asp-route-page="@i" asp-route-count="4">@i</a></li>
                }
            <li class="page-item @(Model.HasNext ? "" : "disabled")"><a class="page-link" asp-action="TagLoadMore" asp-route-page="@(Model.CurrentPage + 1)" asp-route-count="4">Next</a></li>
        </ul>
    </nav>
    </tbody>

</table>