@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model UpdateProductVM
@{
    ViewData["Title"] = "Update";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update </h6>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>   <div class="form-group">
                <label asp-for="ProductCode">ProductCode</label>
                <input asp-for="ProductCode" class="form-control">
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="About">About</label>
                    <input asp-for="About" class="form-control">
                    <span asp-validation-for="About" class="text-danger"></span>
                </div>    <div class="form-group">
                    <label asp-for="SellPrice">SellPrice</label>
                    <input asp-for="SellPrice" class="form-control">
                    <span asp-validation-for="SellPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CostPrice">CostPrice</label>
                    <input asp-for="CostPrice" class="form-control">
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount">Discount</label>
                    <input asp-for="Discount" class="form-control">
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>    <div class="form-group">
                    <label asp-for="Quantity">Quantity</label>
                    <input asp-for="Quantity" class="form-control">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>    <div class="form-group">
                    <label asp-for="IsDeleted">IsDeleted</label>
                    <input asp-for="IsDeleted" class="form-control">
                    <span asp-validation-for="IsDeleted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">CategoryId</label>
                    <select class="form-control" asp-for="CategoryId" asp-items='@new  SelectList(ViewBag.Category,"Id","Name")'>
                        <option disabled selected>Select CategoryId</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TagId">Tag</label>
                    <select class="form-control" asp-for="TagId" asp-items='@new  SelectList(ViewBag.Tag,"Id","Title")'>
                        <option disabled selected>Select Tag</option>
                    </select>
                    <span asp-validation-for="TagId" class="text-danger"></span>
                </div>
                      <div class="form-group">
                @if (Model.ImageUrls.Count() > 0)
                {
                    <div class="row">
                        @foreach (var url in Model.ImageUrls)
                        {
                            <div class="col-1 position-relative">
                                <a asp-action="DeleteImageCSharp" asp-route-id="@url.Id" style="cursor:pointer; font-size:20px;" class="position-absolute top-0 text-danger del-img">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                                <img class="w-100" src="~/@url.Url" />
                            </div>
                        }
                    </div>
                }
                <span asp-validation-for="ImageUrls" class="text-danger"></span>
                <label asp-for="Images"></label>
                <input asp-for="Images" accept="image/*" class="form-control">
                <div class="text-danger salam" asp-validation-summary=ModelOnly></div>
                @* <span asp-validation-for="Images" class="text-danger"></span> *@
            </div>
                <div class="form-group">
                    <label asp-for="ProductMainImg">ImagePath</label>
                    <img width="200" src="~/@Model.ProductMainImgstr" />
                    <input asp-for="ProductMainImg" accept="image/*" class="form-control">

                    <span asp-validation-for="ProductMainImg" class="text-danger"></span>

                </div>
                @*      <div class="form-group">
                <label for="left">Left</label>
                <input asp-for="Isleft" value="-1" type="radio" id="left">
                <label for="middle">Middle</label>
                <input asp-for="Isleft" value="0" type="radio" id="middle">
                <label for="right">Right</label>
                <input asp-for="Isleft" value="1" type="radio" id="right">
                <br />
                <span asp-validation-for="Isleft" class="text-danger"></span>
                </div> *@
                <button class="btn btn-success">Submit!</button>
        </form>
    </div>
</div>

