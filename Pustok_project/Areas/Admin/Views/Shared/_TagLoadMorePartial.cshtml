@model LoadMoreVM<IEnumerable<TagListItemVM>>
@section styles{
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@foreach (var item in Model.Items)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Title</td>
        <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
        <td class="text-center"><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
    </tr>
}
<nav aria-label="Page navigation example">
    <ul id="prod-pag" class="pagination">
        <li class="page-item @(Model.HasLoadMore ? "" : "disabled")"><a class="page-link" asp-action="TagLoadMore" asp-route-page="@(Model.CurrentPage + 1)" asp-route-count="4">Load More</a></li>
    </ul>
</nav>